@model LaboraGTv0._1.Models.TipoDocumento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<div class="ui segment vertical">
    <div class="ui container">
        <div class="ui header block">
            <div class="ui breadcrumb">
                <a href="/" class="section"><i class="icon home "></i></a>
                <i class="right angle icon divider"></i>
                <a href="/TiposDocumentos" class="section">Tipo de documento</i></a>
                <i class="right angle icon divider"></i>
                <div class="section active">Agregar tipo de documento</div>
            </div>
        </div>
        <h1 class="ui header">Nuevo Tipo de Documento</h1>
        <div class="ui divider"></div>
        <form method="post" class="ui form container text segment">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "ui error message" })

            <div class="field required">
               <label>Tipo de Documento</label>
                    @Html.EditorFor(model => model.tipoDocumento1)
                    @Html.ValidationMessageFor(model => model.tipoDocumento1, "", new { @class = "ui error messager" })
                </div>
                <div class="field">
                    <label>Mascara de documento</label>
                    
                        @Html.EditorFor(model => model.mascara)
                        @Html.ValidationMessageFor(model => model.mascara, "", new { @class = "ui error messager" })
                    
            </div>
            <div class="ui divider hidden"></div>
            <button type="submit" class="ui button fluid teal">
                <i class="icon save"></i>
                Completar
            </button>
        </form>

    </div>
</div>


