@model IEnumerable<LaboraGTv0._1.Models.Puesto>

@{
    ViewBag.Title = "Puestos";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}





<div class="ui segment vertical">
    <div class="ui container">
        <div class="ui header block">
            <div class="ui breadcrumb">
                <a href="/" class="section"><i class="icon home "></i></a>
                <i class="right angle icon divider"></i>
                <div class="section active">@ViewBag.Title</div>
            </div>
        </div>
        <h1 class="ui header">@ViewBag.Title</h1>
        <div class="ui divider"></div>

        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "ui button primary" })
        <table class="ui ustackable celled table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Area</th>
                    <th>Ordinario</th>
                    <th>Puesto</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ToList().Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.idPuesto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Area.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.sueldoOrdinario)</td>
                            <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.idPuesto }, new { @class = "ui button mini primary" })
                                @Html.ActionLink("Ver", "Details", new { id = item.idPuesto }, new { @class = "ui button mini primary" })
                                @Html.ActionLink("Borrar", "Delete", new { id = item.idPuesto }, new { @class = "ui button mini yellow" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No hay ningun registro para mostrar...</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4">

                        <div class="ui pagination menu">
                            <a class='item' href=''>1</a>
                        </div>
                    </th>
                    <th>
                        Registros(@Model.ToList().Count )

                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>
