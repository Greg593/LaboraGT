@model LaboraGTv0._1.Models.Bonos

@{
    ViewBag.Title = "Bonos";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}



<div class="ui segment vertical">
    <div class="ui container">
        <div class="ui header block">
            <div class="ui breadcrumb">
                <a href="/" class="section"><i class="icon home "></i></a>
                <i class="right angle icon divider"></i>
                <a href="/Bonos" class="section">Bonos</a>
                <i class="right angle icon divider"></i>
                <div class="section active">Agregar Bonos</div>
            </div>
        </div>
        <h1 class="ui header">Nuevo Bono</h1>
        <div class="ui divider"></div>
        <form method="post" class="ui form container text segment">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "ui error message" })

            <div class="field required">
                <label>Descripción</label>
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @required = "" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "ui error message" })

            </div>

            <div class="form-group">
                <label>Monto</label>
                
                    @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @required = "" } })
                    @Html.ValidationMessageFor(model => model.monto, "", new { @class = "ui error message" })
               
            </div>
            <div class="ui divider hidden"></div>
            <button type="submit" class="ui button fluid teal">
                <i class="icon save"></i>
                Completar
            </button>
        </form>

    </div>
</div>



