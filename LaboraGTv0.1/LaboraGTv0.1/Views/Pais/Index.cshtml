@model IEnumerable<LaboraGTv0._1.Models.Pais>

@{
    ViewBag.Title = "Paises";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}


<div class="ui segment vertical">
   <div class="ui container">
       <div class="ui header block">
           <div class="ui breadcrumb">
               <a href="/" class="section"><i class="icon home "></i></a>
               <i class="right angle icon divider"></i>
               <div class="section active">Paises</div>
           </div>
       </div>
       <h1 class="ui header">Listado de Paises</h1>
       <div class="ui divider"></div>

       @Html.ActionLink("Crear Nuevo", "Create",null, new { @class = "ui button primary" })
       <table class="ui ustackable celled table">
           <thead>
               <tr>
                   <th>ID</th>
                   <th>Descripción</th>
                   <th>Extensión</th>
                   <th></th>
               </tr>
           </thead>
           <tbody>
@foreach (var item in Model)
{
               <tr>
                   <td>@Html.DisplayFor(modelItem => item.idPais)</td>
                   <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                   <td>@Html.DisplayFor(modelItem => item.extension)</td>
                   <td>
                       @Html.ActionLink("Editar", "Edit", new { id = item.idPais }, new { @class = "ui button mini primary" })
                       @Html.ActionLink("Ver", "Details", new { id = item.idPais }, new { @class = "ui button mini primary" })
                       @Html.ActionLink("Borrar", "Delete", new { id = item.idPais }, new { @class = "ui button mini yellow" })
                   </td>
               </tr>
}
           </tbody>
           <tfoot>
               <tr>
                   <th colspan="3">

                       <div class="ui pagination menu">
                           <a class='item' href=''>1</a>
                       </div>
                   </th>
                   <th>
                       Registros(@Model.ToList().Count )

                   </th>
               </tr>
           </tfoot>
       </table>
   </div>
    
</div>

