@model LaboraGTv0._1.Models.Pais

@{
    ViewBag.Title = "Nuevo Pais";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}


<div class="ui segment vertical">
    <div class="ui container">
        <div class="ui header block">
            <div class="ui breadcrumb">
                <a href="/" class="section"><i class="icon home "></i></a>
                <i class="right angle icon divider"></i>
                <a href="/Pais" class="section">Paises</i></a>
                <i class="right angle icon divider"></i>
                <div class="section active">Agregar Pais</div>
            </div>
        </div>
        <h1 class="ui header">Nuevo Pais</h1>
        <div class="ui divider"></div>
        <form method="post" class="ui form container text">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "ui error message" })
            <div class="field required">
                <label>Código</label>
                @Html.EditorFor(model => model.idPais, new { htmlAttributes = new { @required = "" } })
                @Html.ValidationMessageFor(model => model.idPais, "", new { @class = "ui error messager" })
            </div>

            <div class="field required">
                <label>Descripción</label>
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @required = "" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "ui error messagerr" })
               
            </div>

            <div class="Field">
                <label>Extención</label>
                    @Html.EditorFor(model => model.extension, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.extension, "", new { @class = "text-danger" })
               
            </div>
            <div class="ui divider hidden"></div>
            <button type="submit" class="ui button fluid teal"  >
                <i class="icon save"></i>
                Completar
            </button>
        </form>

    </div>
</div>


