<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | LaboraGT</title>
    
    @Styles.Render("~/Content/semantic")
    @Styles.Render("~/Content/calendar")

</head>
<body>
    <div class="ui left vertical menu sidebar inverted ">
        <div class="item">
            <!--<h2 class="ui center aligned icon header inverted">
                <i class="chess king icon"></i>
                Labora GT
            </h2>-->
            <img class="ui centered small image" src="~/Content/img/LaboraGT-logo.png">
        </div>
        <!--<a class="item"><i class="user icon"></i> Usuarios </a>
        <a class="item"><i class="map icon"></i> Ubicaciones </a>
        <a class="item"><i class="video play icon"></i> Vídeos </a>
        -->
        <div class="item">
            Parametrización
            <i class="whmcs icon"></i>
            <div class="menu">
                <a class="item" href="/Pais">Paises</a>
                <a class="item" href="/Parentezcos">Parentezcos</a>
                <a class="item" href="/Profesiones">Profesiones</a>
                <a class="item" href="/FormaPagos">Formas de Pago</a>
                <a class="item" href="/EstadosCiviles">Estados Civiles</a>
                <a class="item" href="/NivelesAcademicos">Niveles Academicos</a>
                <a class="item" href="/TiposReferencias">Tipos de Referencia</a>
                <a class="item" href="/TiposDocumentos">Tipos de Documento</a>
                <a class="item" href="/TipoDirecciones">Tipos de Dirección</a>
                <a class="item" href="/Servicios">Tipos de Servicios</a>
                <a class="item" href="/Bonos" >Tipos de Bonos</a>
                <a class="item" href="/TipoDescuentos">Tipos de Descuentos</a>
            </div>
        </div>
        <div class="item">
            Administración
            <i class="cogs icon"></i>
            <div class="menu">
                <a class="item" href="/Empresas">Empresas</a>
                <a class="item" href="/Bancos">Bancos</a>
                <a class="item" href="/Areas">Areas</a>
                <a class="item" href="/Puestos">Puestos</a>
                <a class="item">Colaboradores</a>
                <a class="item">Indicadores</a>
            </div>
        </div>
        <div class="item">
            Reportes
            <i class="cogs icon"></i>
            <div class="menu">
                <a class="item">Generación de Planilla</a>
                <a class="item">Reporte 1</a>
                <a class="item">Reporte 2</a>
                <a class="item">Reporte 3</a>
                <a class="item">Reporte 4</a>
                <a class="item">Reporte 5</a>
            </div>
        </div>
    </div>
    <div class="pusher">
        <!-- Site content !-->
        <div class="ui segment inverted teal vertical">
            <div class="ui container">
                <div class="ui secondary inverted   menu">
                    <a class="item btn my-menu active">
                        <i class="bars icon"></i>
                        Menú
                    </a>
                    <div class="ui right dropdown item config" tabindex="0">
                        <i class="user circle icon"></i>Administrador
                        <i class="dropdown icon"></i>
                        <div class="menu transition hidden" tabindex="-1">
                            <a class="item"><i class="cog icon"></i>Configurar</a>
                            <a class="item"><i class="power off icon"></i> Salir </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()<!--Content Site-->
    </div> <!-- End Site Content-->
  

    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/semantic")
    @Scripts.Render("~/bundles/calendar")
    <script>
        $(document).ready(function () {
            $(".btn.my-menu").click(function () {
                $('.sidebar')
                  .sidebar('setting', 'transition', 'overlay')
                  .sidebar('toggle');
            });
            //habilitacion de dropdown
            $('.ui.dropdown').dropdown();

            $('#calendar').calendar({
                type: 'date',
                monthFirst: false,
                formatter: {
                    date: function (date, settings) {
                        if (!date) return '';
                        var day = date.getDate();
                        var month = date.getMonth() + 1;
                        var year = date.getFullYear();
                        return day + '-' + month + '-' + year;
                    }
                }
            });
        });
    </script>
</body>
</html>
