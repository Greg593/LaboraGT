@model LaboraGTv0._1.Models.Empresa

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}





<div class="ui segment vertical">
    <div class="ui container">
        <div class="ui header block">
            <div class="ui breadcrumb">
                <a href="/" class="section"><i class="icon home "></i></a>
                <i class="right angle icon divider"></i>
                <a href="/Empresas" class="section">Empresas</a>
                <i class="right angle icon divider"></i>
                <div class="section active">Agregar Empresa</div>
            </div>
        </div>
        <h1 class="ui header">Nueva Empresa</h1>
        <div class="ui divider"></div>
        <form method="post" class="ui form container text">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "ui error message" })

            <div class="field required">
                <label>Nombre de la empresa</label>
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @required = "" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "ui error messagerr" })

            </div>
            <div class="field required">
                @Html.LabelFor(model => model.NIT, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.NIT, new { htmlAttributes = new { @required = "" } })
                    @Html.ValidationMessageFor(model => model.NIT, "", new { @class = "ui error messager" })
                
            </div>
            <div class="ui divider hidden"></div>
            <button type="submit" class="ui button fluid teal">
                <i class="icon save"></i>
                Completar
            </button>
        </form>

    </div>
</div>



